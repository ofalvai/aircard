<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ofalvai.aircard.MainActivity">

    <Button
        android:id="@+id/clear_debug_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_clear_log" />

    <Button
        android:id="@+id/publish"
        android:layout_toRightOf="@id/clear_debug_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publish" />

    <Button
        android:id="@+id/launch_nearby_cards"
        android:layout_below="@id/clear_debug_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearby Cards"/>

    <Button
        android:id="@+id/launch_saved_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/launch_nearby_cards"
        android:layout_below="@id/clear_debug_log"
        android:text="Saved cards"/>

    <Button
        android:id="@+id/launch_my_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/launch_saved_cards"
        android:layout_below="@id/clear_debug_log"
        android:text="My cards"/>

    <Button
        android:id="@+id/launch_new_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/launch_nearby_cards"
        android:text="New main"/>

    <TextView
        android:id="@+id/debug_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clear_debug_log"
        android:maxLines="10"
        android:scrollbars="vertical" />

    <ListView
        android:id="@+id/nearby_cards_list"
        android:layout_below="@id/debug_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</RelativeLayout>
